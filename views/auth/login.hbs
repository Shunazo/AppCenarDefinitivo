<div class="auth-form-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="auth-card card">
                    <div class="card-body">
                        <h2 class="auth-title text-center">Iniciar Sesión</h2>
                        
                        {{#if error}}
                        <div class="alert alert-danger">{{error}}</div>
                        {{/if}}

                        <form action="/login" method="POST" class="needs-validation" novalidate>
                            <div class="form-group mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" name="email" class="form-control" required>
                            </div>

                            <div class="form-group mb-4">
                                <label class="form-label">Contraseña</label>
                                <input type="password" name="password" class="form-control" required>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 mb-3">Iniciar Sesión</button>

                            <div class="d-flex justify-content-between">
                                <a href="/registro-cliente-delivery" class="btn btn-outline-primary">Registrar Cliente / Delivery</a>
                                <a href="" class="btn btn-outline-primary">Registrar Comercio</a>
                                <a href="/reset-password" class="btn btn-link">¿Olvidaste tu contraseña?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{head}}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="/assets/css/cliente/tipo-comercio.css" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark text-white">
            <div class="sidebar-header">
                <div class="user-avatar">
                    {{#if usuario.fotoPerfil}}
                        <img src="{{usuario.fotoPerfil}}" alt="Foto de perfil" class="profile-image">
                    {{else}}
                        <i class="fas fa-user-circle fa-4x"></i>
                    {{/if}}
                    <h4>{{usuario.nombre}}</h4>
                </div>
            </div>
            <ul class="list-unstyled components">
                <li><a href="/cliente/home"><i class="fas fa-home me-2"></i>Home</a></li>
                <li><a href="/cliente/perfil/edit"><i class="fas fa-user me-2"></i>Mi Perfil</a></li>
                <li><a href="/cliente/pedidos"><i class="fas fa-shopping-bag me-2"></i>Mis Pedidos</a></li>
                <li><a href="/cliente/direcciones"><i class="fas fa-map-marker-alt me-2"></i>Mis Direcciones</a></li>
                <li><a href="/cliente/favoritos"><i class="fas fa-heart me-2"></i>Mis Favoritos</a></li>
                <li>
                    <button id="logout-btn" class="nav-link text-white logout-btn">
                        <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                    </button>
                </li>
            </ul>
        </nav>

<div id="content" class="p-4">
    <div class="container">




        <h2 class="mb-4"><i class="fas fa-store me-2"></i>Comercios - {{tipoNombre}}</h2>
        <span>{{comercios.length}} comercios encontrados</span>
        <form action="" method="GET">
    <div class="search-bar">
        <i class="fas fa-search"></i>
        <input type="text" id="search" name="search" placeholder="¿Qué te gustaría comer hoy?" class="form-control">
        <button type="submit" class="btn btn-general">
            <i class="bi bi-search"></i> Buscar
        </button>
    </div>
</form>
        {{#if comercios.length}}
            <div class="row g-4">
                {{#each comercios}}

            <form action ="/cliente/tipo-comercio/{{id}}" method="GET">
                
            </form>
                <div class="col-6 col-md-4 col-lg-3">
                    <a href="/cliente{{catalogoUrl}}" class="comercio-card">
                        <div class="card">
                            <img src="{{logo}}" alt="{{nombreComercio}}" class="comercio-img">
                            <div class="card-overlay">
                                <i class="fas fa-utensils category-icon"></i>
                                <h3 class="comercio-name">{{nombreComercio}}</h3>
                            </div>

                            <!-- Heart icon to toggle favorito -->
                            <form action="/cliente/favoritos/toggle/{{id}}" method="POST" class="position-absolute top-0 end-0 m-2">
                                <button class="btn p-0" type="submit">
                                    <i class="fas {{#if isFavorito}}fa-heart text-danger{{else}}fa-heart text-muted{{/if}} fa-lg"></i>
                                </button>
                            </form>
                        </div>
                    </a>
                </div>
                {{/each}}
            </div>
        {{else}}

    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        No hay comercios disponibles en este tipo.
    </div>

    <a href="/cliente/home" class="btn btn-primary">Volver a la lista</a>

        {{/if}}
    </div>
</div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/index.js"></script>
</body>
</html>

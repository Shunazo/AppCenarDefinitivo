<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel Administrativo - AppCenar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="/assets/css/home-admin.css" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark">
            <div class="sidebar-header">
                <h3><i class="fas fa-user-shield me-2"></i>Panel Admin</h3>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                    <a href="/administrador/home">
                        <i class="fas fa-home me-2"></i>Dashboard
                    </a>
                </li>
                <li>
                    <a href="/administrador/clientes">
                        <i class="fas fa-users me-2"></i>Clientes
                    </a>
                </li>
                <li>
                    <a href="/administrador/delivery">
                        <i class="fas fa-motorcycle me-2"></i>Delivery
                    </a>
                </li>
                <li>
                    <a href="/administrador/comercios">
                        <i class="fas fa-store me-2"></i>Comercios
                    </a>
                </li>
                <li>
                    <a href="/administrador/configuracion">
                        <i class="fas fa-cogs me-2"></i>Configuración
                    </a>
                </li>
                <li>
                    <a href="/administrador/administradores">
                        <i class="fas fa-user-tie me-2"></i>Administradores
                    </a>
                </li>
                <li>
                    <a href="/administrador/tipo-comercios">
                        <i class="fas fa-store-alt me-2"></i>Tipos de Comercio
                    </a>
                </li>
                <li>
                    <a href="/logout">
                        <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <div class="container-fluid">
                <h1 class="mb-4">Dashboard</h1>

                <div class="row">
                    <!-- Pedidos Stats -->
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card stat-card bg-primary text-white">
                            <div class="card-body">
                                <h5 class="card-title">Pedidos</h5>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h3 class="mb-0">{{stats.totalPedidos}}</h3>
                                        <small>Total histórico</small>
                                    </div>
                                    <div>
                                        <h3 class="mb-0">{{stats.pedidosHoy}}</h3>
                                        <small>Hoy</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Comercios Stats -->
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card stat-card bg-success text-white">
                            <div class="card-body">
                                <h5 class="card-title">Comercios</h5>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h3 class="mb-0">{{stats.comerciosActivos}}</h3>
                                        <small>Activos</small>
                                    </div>
                                    <div>
                                        <h3 class="mb-0">{{stats.comerciosInactivos}}</h3>
                                        <small>Inactivos</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Clientes Stats -->
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card stat-card bg-info text-white">
                            <div class="card-body">
                                <h5 class="card-title">Clientes</h5>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h3 class="mb-0">{{stats.clientesActivos}}</h3>
                                        <small>Activos</small>
                                    </div>
                                    <div>
                                        <h3 class="mb-0">{{stats.clientesInactivos}}</h3>
                                        <small>Inactivos</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Delivery Stats -->
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card stat-card bg-warning text-dark">
                            <div class="card-body">
                                <h5 class="card-title">Delivery</h5>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h3 class="mb-0">{{stats.deliveryActivos}}</h3>
                                        <small>Activos</small>
                                    </div>
                                    <div>
                                        <h3 class="mb-0">{{stats.deliveryInactivos}}</h3>
                                        <small>Inactivos</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Productos Stats -->
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card stat-card bg-secondary text-white">
                            <div class="card-body">
                                <h5 class="card-title">Productos</h5>
                                <div class="text-center">
                                    <h3 class="mb-0">{{stats.totalProductos}}</h3>
                                    <small>Total productos creados</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


  <!DOCTYPE html>
  <html lang="es">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Mis Direcciones - AppCenar</title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
      <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
      <link href="/assets/css/cliente/misDirecciones.css" rel="stylesheet">
  </head>
  <body>
      <div class="d-flex">
          <!-- Sidebar -->
         <div class="sidebar">
                <div class="sidebar-header">
                    <div class="user-info">
                        <img src="{{usuario.fotoPerfil}}" alt="Profile" class="user-avatar">
                        <span>{{usuario.nombre}}</span>
                    </div>
              </div>

              <div class="sidebar-menu">
                  <a href="/cliente/home" class="menu-item">
                      <i class="fas fa-home"></i>
                      <span>Inicio</span>
                  </a>
                  <a href="/cliente/perfil/edit" class="menu-item">
                      <i class="fas fa-user"></i>
                      <span>Mi Perfil</span>
                  </a>
                  <a href="/cliente/pedidos" class="menu-item">
                      <i class="fas fa-receipt"></i>
                      <span>Mis Pedidos</span>
                  </a>
                  <a href="/cliente/direcciones" class="menu-item active">
                      <i class="fas fa-map-marker-alt"></i>
                      <span>Mis Direcciones</span>
                  </a>
                  <a href="/cliente/favoritos" class="menu-item">
                      <i class="fas fa-heart"></i>
                      <span>Favoritos</span>
                  </a>
                  <button id="logout-btn" class="menu-item logout">
                      <i class="fas fa-sign-out-alt"></i>
                      <span>Cerrar Sesión</span>
                  </button>
              </div>
          </div>

          <!-- Main Content -->
          <div class="main-content">
              <div class="container">
                  <div class="header-section">
                      <h2><i class="fas fa-map-marker-alt me-2"></i>Mis Direcciones</h2>
                      <a href="/cliente/direcciones/create" class="btn btn-primary">
                          <i class="fas fa-plus me-2"></i>Nueva Dirección
                      </a>
                  </div>

                  <div class="direcciones-list">
                      {{#if direcciones.length}}
                          {{#each direcciones}}
                              <div class="direccion-card">
                                  <div class="card">
                                      <div class="card-body">
                                          <div class="direccion-info">
                                              <h5 class="card-title">{{nombre}}</h5>
                                              <p class="card-text">{{descripcion}}</p>
                                          </div>
                                          <div class="direccion-actions">
                                              <a href="/cliente/direcciones/edit/{{id}}" class="btn btn-outline-primary">
                                                  <i class="fas fa-edit"></i>
                                              </a>
                                              <form action="/cliente/direcciones/delete/{{id}}" method="POST" style="display:inline;" 
                                                      data-entity-name="{{nombre}}" data-entity-type="Direccion">
                                                  <button type="submit" class="btn btn-outline-danger" onclick="confirmDelete(event, this)">
                                                      <i class="fas fa-trash-alt"></i>
                                                  </button>
                                              </form>
                                          </div>
                                      </div>
                                  </div>
                              </div>
                          {{/each}}
                      {{else}}
                          <div class="alert alert-info text-center">
                              <i class="fas fa-info-circle me-2"></i>
                              No tienes direcciones registradas. ¡Agrega una nueva dirección!
                          </div>
                      {{/if}}
                  </div>
              </div>
          </div>
      </div>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      <script src="../../assets/js/index.js"></script>
  </body>
  </html>
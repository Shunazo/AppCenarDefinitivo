<link rel="stylesheet" href="../assets/css/forms.css">
<div class="auth-form-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="auth-card card">
                    <div class="card-body">
                        <h2 class="auth-title text-center">Restablecer Contraseña</h2>
                        
                        {{#if error}}
                        <div class="alert alert-danger">{{error}}</div>
                        {{/if}}
                        
                        {{#if message}}
                        <div class="alert alert-success">{{message}}</div>
                        {{/if}}

                        <form action="/reset-password" method="POST">
                            <div class="form-group mb-4">
                                <label class="form-label">Correo Electrónico</label>
                                <input type="email" name="correo" class="form-control" required>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Enviar Link de Recuperación</button>
                        </form>
                        
                        <div class="mt-3 text-center btn-volver">
                            <a href="/" class="exit btn-password ">Volver al inicio</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
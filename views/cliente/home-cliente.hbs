<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AppCenar - Delivery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="/assets/css/home-cliente.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <img src="https://via.placeholder.com/200x80/FF0F65/FFFFFF?text=AppCenar" alt="AppCenar Logo" class="logo">
                <div class="user-info">
        <img src="{{usuario.fotoPerfil}}" alt="Profile" class="user-avatar">
    <span>{{usuario.nombre}}</span>
</div>


        </div>
            <div class="sidebar-menu">
                <a href="/cliente/home" class="menu-item active">
                    <i class="fas fa-home"></i>
                    <span>Inicio</span>
                </a>
                <a href="/cliente/perfil" class="menu-item">
                    <i class="fas fa-user"></i>
                    <span>Mi Perfil</span>
                </a>
                <a href="/cliente/pedidos" class="menu-item">
                    <i class="fas fa-receipt"></i>
                    <span>Mis Pedidos</span>
                </a>
                <a href="/cliente/direcciones" class="menu-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>Mis Direcciones</span>
                </a>
                <a href="/cliente/favoritos" class="menu-item">
                    <i class="fas fa-heart"></i>
                    <span>Favoritos</span>
                </a>
                <button id="logout-btn" class="menu-item logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Cerrar Sesión</span>
                </button>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <header class="content-header">
                <div class="delivery-address">
                    <i class="fas fa-location-dot"></i>
                    <div>
                        <span>Entregar en</span>
                        <h6>{{cliente.direccion}}</h6>
                    </div>
                </div>
                <div class="search-bar">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="¿Qué te gustaría comer hoy?">
                </div>
            </header>

            <!-- Categories -->
            <section class="categories-section">
                <h2>Categorías</h2>
                <div class="row g-4">
                    <div class="col-6 col-md-4 col-lg-3">
                        <a href="/client/stores/restaurantes" class="category-card">
                            <div class="card">
                                <img src="https://images.pexels.com/photos/1640777/pexels-photo-1640777.jpeg" alt="Restaurantes">
                                <div class="card-overlay">
                                    <i class="fas fa-utensils category-icon"></i>
                                    <h3>Restaurantes</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-6 col-md-4 col-lg-3">
                        <a href="/client/stores/farmacias" class="category-card">
                            <div class="card">
                                <img src="https://images.pexels.com/photos/4021779/pexels-photo-4021779.jpeg" alt="Farmacias">
                                <div class="card-overlay">
                                    <i class="fas fa-pills category-icon"></i>
                                    <h3>Farmacias</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-6 col-md-4 col-lg-3">
                        <a href="/client/stores/supermercados" class="category-card">
                            <div class="card">
                                <img src="https://images.pexels.com/photos/264636/pexels-photo-264636.jpeg" alt="Supermercados">
                                <div class="card-overlay">
                                    <i class="fas fa-shopping-cart category-icon"></i>
                                    <h3>Supermercados</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-6 col-md-4 col-lg-3">
                        <a href="/client/stores/tiendas" class="category-card">
                            <div class="card">
                                <img src="https://images.pexels.com/photos/1884581/pexels-photo-1884581.jpeg" alt="Tiendas">
                                <div class="card-overlay">
                                    <i class="fas fa-store category-icon"></i>
                                    <h3>Tiendas</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-6 col-md-4 col-lg-3">
                        <a href="/client/stores/bebidas" class="category-card">
                            <div class="card">
                                <img src="https://images.pexels.com/photos/2789328/pexels-photo-2789328.jpeg" alt="Bebidas">
                                <div class="card-overlay">
                                    <i class="fas fa-glass-cheers category-icon"></i>
                                    <h3>Bebidas</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-6 col-md-4 col-lg-3">
                        <a href="/client/stores/cafe-postres" class="category-card">
                            <div class="card">
                                <img src="https://images.pexels.com/photos/291528/pexels-photo-291528.jpeg" alt="Café & Postres">
                                <div class="card-overlay">
                                    <i class="fas fa-coffee category-icon"></i>
                                    <h3>Café & Postres</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-6 col-md-4 col-lg-3">
                        <a href="/client/stores/salud" class="category-card">
                            <div class="card">
                                <img src="https://images.pexels.com/photos/3683098/pexels-photo-3683098.jpeg" alt="Salud">
                                <div class="card-overlay">
                                    <i class="fas fa-heartbeat category-icon"></i>
                                    <h3>Salud</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </section>

            <!-- Featured Stores -->
            <section class="featured-section">
                <h2>Comercios Destacados</h2>
                <div class="row g-4">
                    {{#each comerciosDestacados}}
                    <div class="col-md-6 col-lg-4">
                        <div class="store-card">
                            <div class="store-header">
                                <img src="{{this.imagen}}" alt="{{this.nombre}}">
                                <button class="favorite-btn">
                                    <i class="far fa-heart"></i>
                                </button>
                            </div>
                            <div class="store-body">
                                <h4>{{this.nombre}}</h4>
                                <div class="store-info">
                                    <span><i class="fas fa-star"></i> {{this.rating}}</span>
                                    <span><i class="fas fa-clock"></i> {{this.tiempoEntrega}} min</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </section>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../assets/js/index.js"></script>
</body>
</html>
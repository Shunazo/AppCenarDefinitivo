<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle de Pedido - AppCenar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="/assets/css/detalle-pedido.css" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark text-white">
            <div class="sidebar-header">
                <div class="delivery-avatar">
                    <i class="fas fa-user-circle fa-4x"></i>
                    <h4>{{delivery.nombre}}</h4>
                </div>
            </div>
            
            <ul class="list-unstyled components">
                <li class="active">
                    <a href="/delivery/home"><i class="fas fa-home me-2"></i>Home</a>
                </li>
                <li>
                    <a href="/delivery/perfil"><i class="fas fa-user me-2"></i>Mi Perfil</a>
                </li>
                <li>
                    <button id="logout-btn" class="nav-link text-white logout-btn">
                    <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                    </button>
                </li>
            </ul>
        </nav>

        <!-- Content -->
        <div id="content" class="p-4">
            <div class="container">
                <div class="pedido-detail-card">
                    <div class="comercio-header">
                        <img src="{{pedido.Comercio.logo}}" alt="{{pedido.Comercio.nombreComercio}}" class="comercio-logo">
                        <h2>{{pedido.Comercio.nombreComercio}}</h2>
                    </div>

                    <div class="pedido-info">
                        <div class="status-badge">
                            <span class="badge 
                            
                                {{#if 'pendiente')}}bg-warning{{/if}}
                                {{#if 'en_proceso')}}bg-info{{/if}}
                                {{#if ('completado')}}bg-success{{/if}}">
                                {{pedido.estado}}
                            </span>
                        </div>

                        <div class="info-row">
                            <i class="far fa-calendar-alt"></i>
                            <span>{{formatDate pedido.fechaHora}}</span>
                            <i class="far fa-clock ms-3"></i>
                            <span>{{formatTime pedido.fechaHora}}</span>
                        </div>

                        {{#unless (eq pedido.estado 'completado')}}
                            <div class="direccion-entrega">
                                <i class="fas fa-map-marker-alt"></i>
                                <p>{{pedido.Direccion.direccion}}</p>
                            </div>
                        {{/unless}}
                    </div>

                    <div class="productos-list">
                        <h3><i class="fas fa-box me-2"></i>Productos</h3>
                        {{#each pedido.productosPedido}}
                            <div class="producto-item">
                                <img src="{{this.Producto.imagen}}" alt="{{this.Producto.nombre}}" class="producto-imagen">
                                <div class="producto-info">
                                    <h4>{{this.Producto.nombre}}</h4>
                                    <p class="precio">${{this.Producto.precio}} x {{this.cantidad}}</p>
                                </div>
                            </div>
                        {{/each}}
                    </div>

                    <div class="total-section">
                        <h3>Total del Pedido</h3>
                        <span class="total-amount">${{pedido.total}}</span>
                    </div>

                    <div class="actions-section">
                        {{#if (eq pedido.estado 'en_proceso')}}
                            <button type="button" 
                                    class="btn btn-success btn-lg"
                                    id="completar-pedido">
                                <i class="fas fa-check-circle me-2"></i>Completar Pedido
                            </button>
                        {{/if}}

                        <a href="/delivery/home" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../../assets/js/index.js"></script>
</body>
</html>


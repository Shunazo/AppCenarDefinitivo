
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Clientes - AppCenar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="/assets/css/admin/listado-clientes.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-user-shield me-2"></i>Panel Admin</h3>
            </div>
              <div class="sidebar-menu">
                  <ul class="list-unstyled components">
                      <li><a href="/administrador/home"><i class="fas fa-home me-2"></i>Dashboard</a></li>
                      <li class="active"><a href="/administrador/clientes"><i class="fas fa-users me-2"></i>Clientes</a></li>
                      <li><a href="/administrador/deliveries"><i class="fas fa-motorcycle me-2"></i>Delivery</a></li>
                      <li><a href="/administrador/comercios"><i class="fas fa-store me-2"></i>Comercios</a></li>
                      <li><a href="/administrador/config"><i class="fas fa-cogs me-2"></i>Configuración</a></li>
                      <li><a href="/administrador/administradores"><i class="fas fa-user-tie me-2"></i>Administradores</a></li>
                      <li><a href="/administrador/tipo-comercio"><i class="fas fa-store-alt me-2"></i>Tipos de Comercio</a></li>
                  </ul>
                  <button id="logout-btn" class="menu-item logout">
                      <i class="fas fa-sign-out-alt"></i>
                      <span>Cerrar Sesión</span>
                  </button>
              </div>
          </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="container">
                <div class="header-section">
                    <h2><i class="fas fa-users me-2"></i>Listado de Clientes</h2>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Teléfono</th>
                                <th>Correo</th>
                                <th>Pedidos Realizados</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each clientes}}
                            <tr>
                                <td>{{nombre}}</td>
                                <td>{{apellido}}</td>
                                <td>{{telefono}}</td>
                                <td>{{correo}}</td>
                                <td class="text-center">{{pedidos.length}}</td>
                                <td>
                                    <span class="status-badge {{#if activo}}active{{else}}inactive{{/if}}">
                                        {{#if activo}}Activo{{else}}Inactivo{{/if}}
                                    </span>
                                </td>
                                <td>
                                    {{#if activo}}
                                        <!-- Form to Deactivate -->
                                            <form action="/administrador/clientes/deactivate/{{id}}" method="POST" style="display:inline;">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-user-slash me-1"></i> Inactivar
                                                </button>
                                            </form>
                                        {{else}}
                                        <!-- Form to Activate -->
                                            <form action="/administrador/clientes/activate/{{id}}" method="POST" style="display:inline;">
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fas fa-user-alt me-1"></i> Activar
                                                </button>
                                            </form>
                                        {{/if}}
                                    </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../../assets/js/index.js"></script>
</body>
</html>


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Clientes - AppCenar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="/assets/css/admin/listado-clientes.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <img src="/assets/img/logo-appcenar.png" alt="AppCenar Logo" class="logo">
                <div class="user-info">
                    {{#if usuario.fotoPerfil}}
                        <img src="{{usuario.fotoPerfil}}" alt="Profile" class="user-avatar">
                    {{else}}
                        <i class="fas fa-user-circle fa-4x profile-icon"></i>
                    {{/if}}
                    <h4 class="user-name">{{usuario.nombre}}</h4>
                </div>
            </div>

            <div class="sidebar-menu">
                <a href="/administrador/home" class="menu-item">
                    <i class="fas fa-home"></i>
                    <span>Inicio</span>
                </a>
                <a href="/administrador/perfil/edit" class="menu-item">
                    <i class="fas fa-user"></i>
                    <span>Mi Perfil</span>
                </a>
                <a href="/administrador/clientes" class="menu-item active">
                    <i class="fas fa-users"></i>
                    <span>Clientes</span>
                </a>
                <a href="/administrador/comercios" class="menu-item">
                    <i class="fas fa-store"></i>
                    <span>Comercios</span>
                </a>
                <button id="logout-btn" class="menu-item logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Cerrar Sesión</span>
                </button>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="container">
                <div class="header-section">
                    <h2><i class="fas fa-users me-2"></i>Listado de Clientes</h2>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Teléfono</th>
                                <th>Correo</th>
                                <th>Pedidos Realizados</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each clientes}}
                            <tr>
                                <td>{{nombre}}</td>
                                <td>{{apellido}}</td>
                                <td>{{telefono}}</td>
                                <td>{{correo}}</td>
                                <td class="text-center">{{cantidadPedidos}}</td>
                                <td>
                                    <span class="status-badge {{#if activo}}active{{else}}inactive{{/if}}">
                                        {{#if activo}}Activo{{else}}Inactivo{{/if}}
                                    </span>
                                </td>
                                <td>
                                    {{#if activo}}
                                        <button class="btn btn-danger btn-sm" onclick="cambiarEstado('{{id}}', false)">
                                            <i class="fas fa-user-slash"></i> Inactivar
                                        </button>
                                    {{else}}
                                        <button class="btn btn-success btn-sm" onclick="cambiarEstado('{{id}}', true)">
                                            <i class="fas fa-user-check"></i> Activar
                                        </button>
                                    {{/if}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/listado-clientes.js"></script>
</body>
</html>
